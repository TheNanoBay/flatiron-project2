
<h1> Hello  <%= @user.name %></h1> 
<ul>
<h3> Your age is: <%= @user.age %>   </h3> 
<h3> Your current location is: <%= @user.location %> </h3> 
<h3> Your current events are: </h3>
<% user_events = @user.events.uniq %>
<% user_events.each do |event| %>
    <h4><li><%= link_to event.name, event_path(event) %></li></h4>  
<% end %>
</ul>


<%= link_to "Back", root_path %>
<%= link_to "Edit Profile", edit_user_path(@user) %>

